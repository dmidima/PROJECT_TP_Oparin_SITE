@if (User.IsInRole("Admin") || User.IsInRole("Dispet"))
{
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Student?.Id">Edit</a> |
        <a asp-page="./Index">Вернутся к списку</a>
    </div>
}


