
@page
@model probModel

@{
    ViewData["Title"] = "Мои билеты";
}


<h2>Мои билеты</h2>


<style>
    /*td, tr{
        padding:50px;
        margin:25px;
        border-collapse:inherit;
        border: 1px solid black;
        text-align:center;
    }*/


    table {
        width: 100%;
        border-collapse: collapse;
        margin: 25px;
    }

    th, td {
        padding: 10px;
        border: 1px solid black;
        text-align: center;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #ddd;
    }


</style>

<table>
    <tr>
        <th>Дата поездки</th>
        <th>Время поездки</th>
        <th>Номер места</th>
        <th>Email пользователя</th>
        <th>откуда</th>
        <th>куда</th>
        <th>состояние заказа</th>
    </tr>

    @foreach (var booking in Model.UserBookings)
    {
        if (@booking.otkyda != null && @booking.Email == @User.Identity?.Name)
        {
        <tr>
            <td>@booking.DateBook</td>
            <td>@booking.TimeBook</td>
            <td>@booking.Seat</td>
            <td>@booking.Email</td>
            <td>@booking.otkyda</td>
            <td>@booking.kyda</td>
            <td>@booking.sostoania</td>
        </tr>
        }
    }
</table>